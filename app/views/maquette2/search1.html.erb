<!-- Maquette 2 - Page de recherche -->
<!-- Formulaire de recherche -->
<div id="search" style="width:50%;margin-top:5%;margin-left:2%;">
  <!-- Entrée termes de recherche -->
  <div class="input-group">
    <input id="search_input" onkeyup="search();" onfocus="foc();" onblur="blu();" type="text" class="form-control" placeholder="Que souhaitez-vous rechercher ?" style="z-index:auto !important;">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary dropdown-toggle color-light1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="set-time" style="z-index:auto !important;">Recommandé</button>
      <div class="dropdown-menu">
        <!-- Sélection du temps -->
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('5');">≤ 5 minutes</span>
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('15');">≤ 15 minutes</span>
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('30');">≤ 30 minutes</span>
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('60');">≤ 60 minutes</span>
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('all');">∞ Désactiver</span>
        <div role="separator" class="dropdown-divider"></div>
        <span class="dropdown-item" style="cursor:pointer;" onclick="time('default');">Recommandé (défaut)</span>
      </div>
    </div>
  </div>
  <!-- Sélection type de contenus -->
  <div style="display:flex;margin-top:1%;user-select:none;">
    <div class="custom-control custom-switch">
      <input onclick="settype('videos');" type="checkbox" class="custom-control-input" id="s1" checked>
      <label class="custom-control-label" for="s1">Vidéos</label>
    </div>
    <div class="vl-light" style="margin-left:3%;height:25px;"></div>
    <div class="custom-control custom-switch" style="margin-left:3%;">
      <input onclick="settype('articles');" type="checkbox" class="custom-control-input" checked id="s2">
      <label class="custom-control-label" for="s2">Articles</label>
    </div>
    <div class="vl-light" style="margin-left:3%;height:25px;"></div>
    <div class="custom-control custom-switch" style="margin-left:3%;">
      <input onclick="settype('podcasts');" type="checkbox" class="custom-control-input" checked id="s3">
      <label class="custom-control-label" for="s3">Podcasts</label>
    </div>
  </div>
</div>
