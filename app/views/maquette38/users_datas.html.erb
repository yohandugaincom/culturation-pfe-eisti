<div style="margin:1%" align="center">
  <div class="card background-light1" style="width: 22%;display:inline-block;margin:1%;" align="center">
    <div class="card-body">
      <span id="cdis" class="text-subtitle">...</span>
      <p class="card-text">utilisateurs</p>
    </div>
  </div>
  <div class="card background-light1" style="width: 22%;display:inline-block;margin:1%;" align="center">
    <div class="card-body">
      <span id="cm" class="text-subtitle">...</span>
      <p class="card-text">utilisateurs actifs</p>
    </div>
  </div>
  <div class="card background-light1" style="width: 22%;display:inline-block;margin:1%;" align="center">
    <div class="card-body">
      <span id="q" class="text-subtitle">...</span>
      <p class="card-text">modérateurs</p>
    </div>
  </div>
  <div class="card background-light1" style="width: 22%;display:inline-block;margin:1%;" align="center">
    <div class="card-body">
      <span id="nsign" class="text-subtitle">...</span>
      <p class="card-text">connexions sur 24h</p>
    </div>
  </div>
</div>

<p class="text-heading" style="margin:1%;">Statut utilisateur</p>
<div class="input-group mb-3" style="width:50%;margin:1%;">
  <input type="text" class="form-control" placeholder="Entrer un nom d'utilisateur">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="button" id="searchuser" style="color:white;">Rechercher</button>
  </div>
</div>
<div style="width:38%;float:left;display:inline-block;margin:1%;">
  <div style="width:68%;float:left;display:inline-block;margin:1%;" align="center">
    <div class="sbadge">
      <img src="<%= image_url('test_badge.png') %>" height="20px" width="20px" alt="Badge" style="margin-right:1%;" /><span class="badge badge-secondary text-default">Top contributeur</span>
      <div class="progress" style="height:10px;width:50%;margin:2%;">
        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <button type="button" class="btn btn-success" style="margin:1%;">Promouvoir</button>
      <button type="button" class="btn btn-warning" style="margin:1%;">Rétrograder</button>
      </br>
      <button type="button" class="btn btn-light" style="margin:1%;">Désactiver</button>
      <button type="button" class="btn btn-danger" style="margin:1%;">Supprimer</button>

    </div>
  </div>
  <div style="width:28%;float:right;display:inline-block;margin:1%;" align="left">
    <img src="<%= image_url('profile_default.png') %>" height="100px" width="100px" alt="Avatar">
    <p class="text-heading">[user_id]</p>
  </div>
</div>
<div style="width:58%;float:right;display:inline-block;margin:1%;">
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="row">État du compte : Actif</th>
        <th scope="row">Signalements : 0</th>
      </tr>
      <tr>
        <th scope="row">Statut : Utilisateur (3)</th>
        <th scope="row">Signalés : 0</th>
      </tr>
      <tr>
        <th scope="row">Dernière connexion : ../../....</th>
        <th scope="row">Contributions : 10</th>
      </tr>
    </thead>
  </table>
</div>
